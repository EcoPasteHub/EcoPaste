{
	"identifier": "com.ayangweb.EcoPaste",
	"app": {
		"security": {
			"assetProtocol": {
				"enable": true,
				"scope": {
					"allow": ["**/*"],
					"requireLiteralLeadingDot": false
				}
			}
		}
	},
	"bundle": {
		"linux": {
			"deb": {
				"depends": ["gstreamer1.0-plugins-good"],
				"desktopTemplate": "./EcoPaste.desktop"
			},
			"rpm": {
				"depends": ["gstreamer1-plugins-good"],
				"desktopTemplate": "./EcoPaste.desktop"
			}
		}
	}
}
