{
	"build": {
		"beforeDevCommand": "vite",
		"beforeBuildCommand": "vite build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "EcoCopy",
		"version": "../package.json"
	},
	"tauri": {
		"macOSPrivateApi": true,
		"allowlist": {
			"os": {
				"all": true
			},
			"globalShortcut": {
				"all": true
			},
			"shell": {
				"open": true,
				"sidecar": true,
				"scope": [
					{
						"name": "bin/ocr",
						"sidecar": true,
						"args": true
					}
				]
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": ["$APPDATA/**", "$DOWNLOAD/**"]
			},
			"protocol": {
				"asset": true,
				"assetScope": ["$APPDATA/images/*"]
			},
			"window": {
				"startDragging": true,
				"setPosition": true,
				"center": true
			}
		},
		"windows": [
			{
				"label": "main",
				"title": "EcoCopy",
				"resizable": false,
				"center": true,
				"skipTaskbar": true,
				"hiddenTitle": true,
				"maximizable": false,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"dangerousDisableAssetCspModification": true,
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.ayangweb.EcoCopy",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"externalBin": ["bin/ocr"],
			"windows": {
				"digestAlgorithm": "sha256",
				"wix": {
					"language": "zh-CN"
				},
				"nsis": {
					"languages": ["SimpChinese"]
				}
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true,
			"menuOnLeftClick": false
		}
	}
}
