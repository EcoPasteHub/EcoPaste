{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "EcoPaste",
		"version": "../package.json"
	},
	"tauri": {
		"macOSPrivateApi": true,
		"allowlist": {
			"os": {
				"all": true
			},
			"globalShortcut": {
				"all": true
			},
			"shell": {
				"open": true,
				"sidecar": true,
				"scope": [
					{
						"name": "bin/ocr",
						"sidecar": true,
						"args": true
					}
				]
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": ["$APPDATA/**", "$DOWNLOAD/**"]
			},
			"protocol": {
				"asset": true,
				"assetScope": ["$APPDATA/images/*"]
			},
			"process": {
				"relaunch": true
			},
			"dialog": {
				"ask": true,
				"open": true
			},
			"window": {
				"startDragging": true,
				"setPosition": true,
				"center": true
			}
		},
		"windows": [
			{
				"label": "main",
				"title": "EcoPaste",
				"resizable": false,
				"center": true,
				"skipTaskbar": true,
				"hiddenTitle": true,
				"maximizable": false,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"dangerousDisableAssetCspModification": true,
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.ayangweb.EcoPaste",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"systemTray": {
			"iconPath": "assets/tray.png",
			"iconAsTemplate": true
		},
		"updater": {
			"active": true,
			"endpoints": [
				"https://mirror.ghproxy.com/https://github.com/ayangweb/EcoPaste/releases/latest/download/latest.json"
			],
			"dialog": false,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNBRjgxOTE4RjlDMzRDNUQKUldSZFRNUDVHQm40T3BzT1FhZWxEMkEvbHBiSFJNLzVleS9HRVIyM0dzN0JXRmZRZktoS2w0U1MK"
		}
	}
}
