{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "EcoPaste",
		"version": "../package.json"
	},
	"tauri": {
		"cli": {
			"args": [
				{
					"name": "info",
					"short": "i"
				}
			]
		},
		"macOSPrivateApi": true,
		"allowlist": {
			"os": {
				"all": true
			},
			"globalShortcut": {
				"all": true
			},
			"shell": {
				"open": true,
				"sidecar": true,
				"scope": [
					{
						"name": "bin/ocr",
						"sidecar": true,
						"args": true
					}
				]
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": ["**/*"]
			},
			"protocol": {
				"asset": true,
				"assetScope": ["**/*"]
			},
			"process": {
				"relaunch": true
			},
			"dialog": {
				"ask": true,
				"open": true
			},
			"window": {
				"startDragging": true,
				"setPosition": true,
				"center": true,
				"setTitle": true,
				"setSkipTaskbar": true
			}
		},
		"windows": [
			{
				"label": "main",
				"title": "EcoPaste",
				"url": "index.html/#/",
				"width": 360,
				"height": 600,
				"minWidth": 360,
				"minHeight": 600,
				"maximizable": false,
				"decorations": false,
				"visible": false,
				"transparent": true,
				"alwaysOnTop": true,
				"acceptFirstMouse": true,
				"skipTaskbar": true
			},
			{
				"label": "preference",
				"url": "index.html/#/preference/clipboard",
				"width": 700,
				"height": 480,
				"center": true,
				"resizable": false,
				"maximizable": false,
				"hiddenTitle": true,
				"visible": false,
				"transparent": true,
				"skipTaskbar": true,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"dangerousDisableAssetCspModification": true,
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": ["nsis", "dmg", "app", "appimage", "deb", "rpm", "updater"],
			"shortDescription": "EcoPaste",
			"identifier": "com.ayangweb.EcoPaste",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"systemTray": {
			"iconPath": "assets/tray.ico"
		},
		"updater": {
			"active": true,
			"endpoints": ["https://ecopaste-updater.ayangweb.cn/api/update"],
			"dialog": false,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcwNEIyQkUwRjNEMTg4NgpSV1NHR0QwUHZySUVCeXFRQzZ4aEpNRWdFdThVQ2I4b2dSQktRcmNtV1dYTFJJV1h2VmVVZXBWSgo="
		}
	}
}
