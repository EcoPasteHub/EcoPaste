{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe"
				}
			},
			"style": {
				"noNonNullAssertion": "off",
				"noUnusedTemplateLiteral": {
					"level": "error",
					"fix": "safe"
				},
				"useTemplate": {
					"level": "error",
					"fix": "safe"
				},
				"useSelfClosingElements": {
					"level": "error",
					"fix": "safe"
				}
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"a11y": {
				"useAltText": "off",
				"useMediaCaption": "off"
			}
		}
	},
	"files": {
		"ignore": ["**/schema.json"]
	}
}
