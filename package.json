	"simple-git-hooks": {
		"commit-msg": "npx --no-install commitlint -e",
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"**.{ts,tsx,json}": ["biome check --apply --no-errors-on-unmatched"]
	}
